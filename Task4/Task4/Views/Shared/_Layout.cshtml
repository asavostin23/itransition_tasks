<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task4.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <div class="container border-bottom" style="background-color:#ffd325;min-height:70px">
            <div class="row text-center">
                <div class="col-lg display-5 col-12 mt-auto">@ViewBag.Title</div>
                <div class="col-lg-2 col-12 h4 mt-auto order-lg-first">
                    <a class="text-black text-decoration-none" asp-action="Index">Задание 4</a>
                </div>
                <div class="col-lg-1 col-6 h4 mt-auto">
                    <a class="text-black text-decoration-none" asp-action="Login">Войти</a>
                </div>
                <div class="col-lg-1 col-6 h4 mt-auto">
                    <a class="text-black text-decoration-none" asp-action="Logout">Выйти</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container mt-2 ps-0 pe-0">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted text-center">
        2022 - asavostin23@gmail.com - Anton Savostin
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
