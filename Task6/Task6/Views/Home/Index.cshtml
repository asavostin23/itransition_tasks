@{
    ViewData["Title"] = "Главная";
}
@model ICollection<PersonViewModel>
<label for="seedInput">Seed</label>
<input type="number" id="seedInput" name="seed" class="form-control mb-1" min="0" value="0" max="@int.MaxValue" required>
<button id="setRandomSeedButton" class="btn btn-primary mb-1">Random</button>
<button id="setZeroSeedButton" class="btn btn-danger mb-1">Zero</button>
<select class="form-select mb-1" id="selectRegion">
    <option value="by" selected>BY</option>
    <option value="pl">PL</option>
    <option value="uk">UK</option>
</select>
<div class="row">
    <div class="col-md-9">
        <label for="errorLevelRangeInput">Error</label>
        <input type="range" class="form-range" id="errorLevelRangeInput" min="0" max="10" step="0.5" value="0" oninput="document.querySelector('#errorLevelTextInput').value = this.value">
    </div>
    <div class="col-md-3">
        <input type="number" class="form-control" value="0" min="0" max="1000" required id="errorLevelTextInput" step="0.5">
    </div>
</div>
<button id="submitButton" class="btn btn-primary mb-1">ОК</button>
<button id="csvExportButton" class="btn btn-secondary mb-1"  disabled>Export to CSV</button>
<div class="text-center mt-1">
    <table class="table table-dark table-striped table-bordered table-hover table-responsive">
        <thead class="table-light">
            <tr>
                <th>Номер</th>
                <th>Id</th>
                <th>Имя</th>
                <th>Адрес</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody id="main-table-body">
        </tbody>
    </table>
</div>
